<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="计价规则"
        android:textColor="@color/text"
        android:textSize="@dimen/text_size_20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin30"
        android:layout_marginTop="@dimen/activity_horizontal_margin30"
        android:orientation="horizontal">

        <com.wx.wheelview.widget.WheelView
            android:id="@+id/wheel_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.wx.wheelview.widget.WheelView
            android:id="@+id/wheel_sub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin10"
        android:layout_marginBottom="@dimen/activity_horizontal_margin10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/city_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin20"
            android:layout_marginRight="@dimen/activity_horizontal_margin20"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingBottom="@dimen/activity_horizontal_margin10"
            android:paddingTop="@dimen/activity_horizontal_margin10"
            android:text="取消"
            android:textColor="@color/text"
            android:textSize="@dimen/activity_text_size18" />

        <TextView
            android:id="@+id/city_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin20"
            android:layout_marginRight="@dimen/activity_horizontal_margin20"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingBottom="@dimen/activity_horizontal_margin10"
            android:paddingTop="@dimen/activity_horizontal_margin10"
            android:text="选择"
            android:textColor="@color/home_bar"
            android:textSize="@dimen/activity_text_size18" />
    </LinearLayout>

</LinearLayout>