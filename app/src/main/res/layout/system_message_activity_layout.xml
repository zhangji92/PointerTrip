<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/comment_toolbar"/>


    <android.support.design.widget.TabLayout
        android:id="@+id/system_message_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTitle"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/new_my_money_button">
        <!--app:tabSelectedTextColor="@color/new_my_money_button"-->
        <!--app:tabTextAppearance="@style/TabLayoutTextStyle"-->
        <!--app:tabTextColor="@color/history_search"-->
        <!--&gt;-->

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/system_message_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

</LinearLayout>