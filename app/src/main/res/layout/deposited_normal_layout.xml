<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_horizontal_margin15"
    android:paddingBottom="@dimen/activity_horizontal_margin5"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/deposited_img"
        android:layout_width="@dimen/activity_horizontal_margin70"
        android:layout_height="@dimen/activity_horizontal_margin70"
        android:src="@mipmap/deposited_one"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin20"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/activity_horizontal_margin8"
        android:paddingTop="@dimen/activity_horizontal_margin8">
        <TextView
            android:id="@+id/deposited_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="指针大礼包"
            android:textColor="@color/foot_header_item_text"
            android:textSize="@dimen/text_size_18sp"
            android:textStyle="normal"
            android:typeface="sans"
            />
        <TextView
            android:id="@+id/deposited_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin8"
            android:text="认证的用户可直接获得价值200元的大礼包"
            android:textColor="@color/video_text"
            android:textSize="@dimen/text_size_14sp"
            android:textStyle="normal"
            android:typeface="sans"
            />
    </LinearLayout>

</LinearLayout>