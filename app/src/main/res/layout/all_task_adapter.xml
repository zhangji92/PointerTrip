<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_margin20"
    android:layout_marginLeft="@dimen/activity_horizontal_margin12"
    android:layout_marginRight="@dimen/activity_horizontal_margin12"
    android:background="@mipmap/kk_tast_zong"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/task_all_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin16"
        android:src="@mipmap/icon_tast_zan_zong" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin10"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点赞任务"
                android:textColor="@color/task_text_bule"
                android:textSize="@dimen/text_size_16sp" />

            <TextView
                android:id="@+id/task_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin10"
                android:text="+ 12.5元"
                android:textColor="@color/task_text_yellow"
                android:textSize="@dimen/text_size_16sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/task_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin5"
            android:text="给您喜欢的游记点赞"
            android:textColor="@color/task_text_black"
            android:textSize="@dimen/text_size_14sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/liner_get_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin15"
        android:background="@mipmap/bt_tast_zong_bl"
        android:gravity="center"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/text_get_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin3"
            android:visibility="gone"
            android:text="领取奖励"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/text_size_16sp" />
        <TextView
            android:visibility="visible"
            android:id="@+id/text_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin8"
            android:text="距离开启还剩"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/text_size_13sp" />
        <yc.pointer.trip.view.CountDownView
            android:visibility="visible"
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06:56:31"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/text_size_14sp" />



    </LinearLayout>


</LinearLayout>