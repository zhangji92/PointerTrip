        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin10"
            android:background="@color/colorTitle"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/liner_deposit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTitle"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin10"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin10"
                    android:layout_weight="1"
                    android:text="充值会员"
                    android:textColor="@color/foot_header_item_text"
                    android:textSize="@dimen/activity_text_size16" />

                <TextView
                    android:id="@+id/ispay_deposit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/activity_horizontal_margin10"
                    android:textColor="@color/letter_location_city"
                    android:textSize="@dimen/activity_text_size16"
                    android:visibility="gone" />


                <ImageView
                    android:layout_width="@dimen/activity_horizontal_margin10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/activity_horizontal_margin5"
                    android:alpha="0.5"
                    android:src="@mipmap/arrow_mine" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin10"
                android:layout_marginRight="@dimen/activity_horizontal_margin10"
                android:background="@color/foot_view_back"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/liner_binding_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTitle"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin10"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin10"
                    android:layout_weight="1"
                    android:text="@string/bindin_phone"
                    android:textColor="@color/foot_header_item_text"
                    android:textSize="@dimen/activity_text_size16" />

                <TextView
                    android:id="@+id/binding_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/activity_horizontal_margin10"
                    android:text="未绑定"
                    android:textColor="@color/foot_header_item_text"
                    android:textSize="@dimen/activity_text_size16"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="@dimen/activity_horizontal_margin10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/activity_horizontal_margin5"
                    android:alpha="0.5"
                    android:src="@mipmap/arrow_mine" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin10"
            android:background="@color/colorTitle"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/liner_recompose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTitle"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin10"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin10"
                    android:layout_weight="1"
                    android:text="@string/recompose_pasw"
                    android:textColor="@color/foot_header_item_text"
                    android:textSize="@dimen/activity_text_size16" />

                <ImageView
                    android:layout_width="@dimen/activity_horizontal_margin10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/activity_horizontal_margin5"
                    android:alpha="0.5"
                    android:src="@mipmap/arrow_mine" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin10"
                android:layout_marginRight="@dimen/activity_horizontal_margin10"
                android:background="@color/foot_view_back" />

            <LinearLayout
                android:id="@+id/liner_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTitle"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin10"

                >


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin10"
                    android:layout_weight="1"
                    android:text="@string/help"
                    android:textColor="@color/foot_header_item_text"
                    android:textSize="@dimen/activity_text_size16" />

                <ImageView
                    android:layout_width="@dimen/activity_horizontal_margin10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/activity_horizontal_margin5"
                    android:alpha="0.5"
                    android:src="@mipmap/arrow_mine" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin10"
            android:background="@color/colorTitle"
            android:orientation="vertical"

            >

            <LinearLayout
                android:id="@+id/liner_clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTitle"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin10"

                >


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin10"
                    android:layout_weight="1"
                    android:text="@string/clear_cache"
                    android:textColor="@color/foot_header_item_text"
                    android:textSize="@dimen/activity_text_size16" />

                <TextView
                    android:id="@+id/cache"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/activity_horizontal_margin15"
                    android:textColor="@color/letter_location_city"
                    android:textSize="@dimen/activity_text_size16" />

                <ImageView
                    android:layout_width="@dimen/activity_horizontal_margin10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/activity_horizontal_margin5"
                    android:alpha="0.5"
                    android:src="@mipmap/arrow_mine" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin10"
                android:layout_marginRight="@dimen/activity_horizontal_margin10"
                android:background="@color/foot_view_back" />

            <LinearLayout
                android:id="@+id/liner_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTitle"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin10"

                >


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin10"
                    android:layout_weight="1"
                    android:text="@string/about_us"
                    android:textColor="@color/foot_header_item_text"
                    android:textSize="@dimen/activity_text_size16" />

                <ImageView
                    android:layout_width="@dimen/activity_horizontal_margin10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/activity_horizontal_margin5"
                    android:alpha="0.5"
                    android:src="@mipmap/arrow_mine" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/login_exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_horizontal_margin40"
            android:layout_marginTop="@dimen/activity_horizontal_margin20"
            android:background="@color/colorTitle"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/letter_location_city"
            android:textSize="@dimen/activity_horizontal_margin18" />
    </LinearLayout>

    <TextView
        android:id="@+id/current_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin15"
        android:text=""
        android:textSize="@dimen/text_size_16sp" />

</RelativeLayout>