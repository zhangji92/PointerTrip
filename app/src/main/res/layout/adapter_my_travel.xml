<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/activity_horizontal_margin10">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
        >
            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/activity_horizontal_margin10"
                    android:paddingTop="@dimen/activity_horizontal_margin10"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin10"


            >
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/location"
                />
                <TextView

                        android:id="@+id/my_travel_scenic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin10"
                        android:text="上海、北京、西藏"
                        android:textSize="@dimen/activity_text_size16"
                        android:textColor="@color/status_bar"
                />
            </LinearLayout>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/road_line"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/activity_horizontal_margin10"
                    android:paddingBottom="@dimen/activity_horizontal_margin10"

            >
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:text="@string/order_travel_time"
                          android:gravity="center"
                          android:textSize="@dimen/activity_text_size18"
                          android:textColor="@color/read_header_text"
                />
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:text="@string/travel_times"
                          android:gravity="center"
                          android:textSize="@dimen/activity_text_size18"
                          android:textColor="@color/read_header_text"
                />
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:text="@string/total_money"
                          android:gravity="center"
                          android:textSize="@dimen/activity_text_size18"
                          android:textColor="@color/read_header_text"
                />
            </LinearLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin55"
                        android:layout_marginRight="@dimen/activity_horizontal_margin55"
                        android:background="@color/status_bar"
                        android:layout_centerVertical="true"
                />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                >
                    <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/activity_horizontal_margin15"
                            android:src="@mipmap/pont"

                    />
                    <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/activity_horizontal_margin15"
                            android:src="@mipmap/pont"

                    />
                    <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="@dimen/activity_horizontal_margin15"
                            android:src="@mipmap/pont"

                    />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/activity_horizontal_margin10"
                    android:paddingBottom="@dimen/activity_horizontal_margin10"

            >
                <TextView
                        android:id="@+id/my_travel_date"
                        android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:text="2017-07"
                          android:gravity="center"
                          android:textSize="@dimen/activity_text_size18"
                          android:textColor="@color/foot_header_item_text"
                />
                <TextView
                        android:id="@+id/my_travel_num"
                        android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:text="5"
                          android:gravity="center"
                          android:textSize="@dimen/activity_text_size18"
                          android:textColor="@color/foot_header_item_text"
                />
                <TextView
                        android:id="@+id/my_travel_money"
                        android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:text="￥1870"
                          android:maxLines="1"
                          android:gravity="center"
                          android:textSize="@dimen/activity_text_size18"
                          android:textColor="@color/order_text_pic"
                />
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>