<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personal_all_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin3"
    android:paddingRight="@dimen/activity_horizontal_margin3"
    android:paddingTop="@dimen/activity_horizontal_margin3"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/personal_all_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/img_gradient_s">

        <TextView
            android:id="@+id/personal_look_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin10"
            android:layout_marginTop="@dimen/activity_horizontal_margin5"
            android:drawableLeft="@mipmap/home_play"
            android:drawablePadding="@dimen/activity_horizontal_margin5"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/text_size_14sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/personal_all_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin3"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/personal_all_img"
        android:layout_marginLeft="@dimen/activity_horizontal_margin10"
        android:layout_marginTop="-28dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/personal_all_fabulous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin10"
            android:drawableLeft="@mipmap/icon_zan_details_mine"
            android:drawablePadding="@dimen/activity_horizontal_margin5"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/text_size_14sp" />

    </LinearLayout>
</RelativeLayout>