<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scenic_item_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_margin10"
    android:background="@color/colorTitle"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin10">

    <TextView
        android:id="@+id/scenic_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin10"
        android:layout_marginTop="@dimen/activity_horizontal_margin10"
        android:text="热门景点"
        android:textColor="@color/read_header_text"
        android:textSize="@dimen/activity_text_size20"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/scenic_item_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/scenic_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="天津之眼"
                android:textColor="@color/foot_header_item_text"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/scenic_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/scenic_item_title"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="摩天轮上的每个盒子都装满了幸福，所以当人民仰望摩天轮时，就是在仰望幸福"
                android:textColor="@color/read_header_text"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/scenic_item_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/horizontal_text"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/scenic_item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="70"
                    android:textColor="@color/horizontal_text"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/scenic_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin30"
                    android:layout_marginRight="20dp"
                    android:text="指针旅游协议价格"
                    android:textColor="@color/read_header_text"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/scenic_item_hook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/scenic_item_title"
                android:layout_marginRight="10dp"
                android:background="@mipmap/unselect_scenic"
                android:contentDescription="@string/logo" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>