                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_horizontal_margin10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin10"
                        android:layout_marginTop="@dimen/activity_horizontal_margin10"
                        android:text="联系方式"
                        android:textColor="@color/foot_header_item_text"
                        android:textSize="@dimen/text_size_18sp" />

                    <EditText
                        android:id="@+id/person_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin10"
                        android:layout_marginTop="@dimen/activity_horizontal_margin10"
                        android:background="@null"
                        android:gravity="center|right"
                        android:textCursorDrawable="@drawable/edittext_cursor_drawable"
                        android:hint="请输入手机号码"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:padding="0dp"
                        android:textSize="@dimen/text_size_18sp" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line" />

                <EditText
                    android:id="@+id/person_edit_autograph"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_horizontal_margin120"
                    android:layout_marginTop="@dimen/activity_horizontal_margin5"
                    android:textCursorDrawable="@drawable/edittext_cursor_drawable"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="个性签名"
                    android:maxLength="60"
                    android:paddingTop="@dimen/activity_horizontal_margin5"
                />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <TextView
                        android:id="@+id/person_total_text_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/activity_horizontal_margin5"
                        android:text="/60"
                        android:textColor="@color/read_header_text"
                        android:textSize="@dimen/text_size_14sp" />

                    <TextView
                        android:id="@+id/person_text_count"
                        android:layout_width="wrap_content"
