                        android:layout_marginBottom="@dimen/activity_horizontal_margin10"
                        android:layout_marginTop="@dimen/activity_horizontal_margin10"
                        android:background="@null"
                        android:gravity="center|right"
                        android:hint="请输入"
                        android:padding="0dp"
                        android:textSize="@dimen/text_size_18sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_horizontal_margin10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin10"
                        android:layout_marginTop="@dimen/activity_horizontal_margin10"
                        android:text="支付宝"
                        android:textColor="@color/foot_header_item_text"
                        android:textSize="@dimen/text_size_18sp" />

                    <EditText
                        android:id="@+id/person_alipay_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin10"
                        android:layout_marginTop="@dimen/activity_horizontal_margin10"
                        android:background="@null"
                        android:gravity="center|right"
                        android:textCursorDrawable="@drawable/edittext_cursor_drawable"
                        android:digits="_.@-0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:hint="支付宝帐号"
                        android:padding="0dp"
                        android:textSize="@dimen/text_size_18sp" />
