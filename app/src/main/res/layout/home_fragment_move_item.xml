<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <yc.pointer.trip.view.SampleCoverVideo
            android:id="@+id/move_cover_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_horizontal_margin260"
            android:layout_gravity="center"
            android:gravity="center" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/img_gradient_s">
            <TextView
                android:id="@+id/move_play_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin10"
                android:layout_marginTop="@dimen/activity_horizontal_margin15"
                android:drawableLeft="@mipmap/home_play"
                android:drawablePadding="@dimen/activity_horizontal_margin5"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/text_size_14sp" />
        </RelativeLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin15"
        android:layout_marginTop="@dimen/activity_horizontal_margin18">

        <RelativeLayout
            android:id="@+id/move_head_ground"
            android:layout_width="@dimen/activity_horizontal_margin50"
            android:layout_height="@dimen/activity_horizontal_margin50">

            <yc.pointer.trip.view.CustomCircleImage
                android:id="@+id/move_head"
                android:layout_width="@dimen/activity_horizontal_margin50"
                android:layout_height="@dimen/activity_horizontal_margin50"
                android:layout_centerInParent="true"
                android:src="@mipmap/head" />

            <ImageView
                android:id="@+id/move_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin5"
                android:src="@mipmap/icon_vip" />
        </RelativeLayout>

        <TextView
            android:id="@+id/move_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin10"
            android:layout_toRightOf="@id/move_head_ground"
            android:text="@string/app_name"
            android:textColor="@color/back_normal"
            android:textSize="@dimen/activity_text_size14" />

        <TextView
            android:id="@+id/move_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/move_nick"
            android:layout_marginLeft="@dimen/activity_horizontal_margin10"
            android:layout_marginTop="@dimen/activity_horizontal_margin10"
            android:layout_toRightOf="@id/move_head_ground"
            android:text="2天前"
            android:textSize="@dimen/activity_text_size14"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/move_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin10"
            android:layout_marginTop="@dimen/activity_horizontal_margin5"
            android:src="@mipmap/icon_concern_had" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/liner_intentDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/move_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin15"
            android:layout_marginTop="@dimen/activity_horizontal_margin20"
            android:layout_toRightOf="@id/move_head_ground"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/back_normal"
            android:textSize="@dimen/activity_text_size16" />
        <TextView
            android:id="@+id/move_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin14"
            android:layout_marginLeft="@dimen/activity_horizontal_margin15"
            android:layout_marginRight="@dimen/activity_horizontal_margin20"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/activity_horizontal_margin8"
            android:text="哈哈哈哈哈你好的佛哇大家你嗲回复买到假的外婆阿文打磨i啊我就滴哦哇地教我减肥佩服击破欧萨激发i哦警方破案我"
            android:textColor="@color/home_move_content"
            android:textSize="@dimen/activity_text_size14" />
        <TextView

            android:id="@+id/move_full_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/move_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/activity_horizontal_margin15"
            android:text="全文"
            android:textColor="@color/new_my_money_button"
            android:textSize="@dimen/activity_text_size14"
            android:visibility="gone"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/move_comment_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin12" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin20"
            android:layout_marginBottom="@dimen/activity_horizontal_margin15"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/zan_a"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/activity_horizontal_margin15"
                android:src="@mipmap/icon_zan_a"
                android:visibility="visible"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/move_like"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin5"
                android:layout_weight="1" />

            <LinearLayout
                android:gravity="center_vertical|right"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/move_like_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/activity_horizontal_margin10"
                    android:drawableLeft="@mipmap/icon_zan_b"
                    android:drawablePadding="@dimen/activity_horizontal_margin6"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="1258"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_size_14sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/move_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/activity_horizontal_margin10"
                    android:drawableLeft="@mipmap/icon_comments_s"
                    android:drawablePadding="@dimen/activity_horizontal_margin6"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="1258"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_size_14sp"
                    android:typeface="sans" />

                <ImageView
                    android:id="@+id/move_hamburger"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/activity_horizontal_margin20"
                    android:layout_gravity="center"
                    android:src="@mipmap/icon_more_s" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>