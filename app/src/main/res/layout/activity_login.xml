<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_loggin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/register_back"
    android:orientation="vertical">

    <include
        layout="@layout/partial_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="@dimen/activity_horizontal_margin80"
        android:layout_height="@dimen/activity_horizontal_margin80"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin35">

        <yc.pointer.trip.view.CustomCircleImage
            android:id="@+id/login_head"
            android:layout_width="@dimen/activity_horizontal_margin67"
            android:layout_height="@dimen/activity_horizontal_margin67"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@mipmap/head" />

        <ImageView
            android:id="@+id/verify_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin55"
            android:layout_marginTop="@dimen/activity_horizontal_margin55"
            android:src="@mipmap/icon_vip" />
    </RelativeLayout>


    <yc.pointer.trip.view.ClearEditText
        android:id="@+id/loggin_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_horizontal_margin42"
        android:layout_marginLeft="@dimen/activity_horizontal_margin30"
        android:layout_marginRight="@dimen/activity_horizontal_margin30"
        android:layout_marginTop="@dimen/activity_horizontal_margin25"
        android:background="@null"
        android:drawableLeft="@mipmap/phone"
        android:drawablePadding="@dimen/activity_horizontal_margin10"
        android:drawableRight="@drawable/delete_selector"
        android:gravity="center_vertical"
        android:hint="@string/register_phone"
        android:inputType="phone"
        android:paddingRight="@dimen/activity_horizontal_margin10"
        android:textColor="@color/video_text"
        android:textColorHint="@color/video_text"
        android:textCursorDrawable="@drawable/edittext_cursor_drawable"
        android:textSize="@dimen/text_size_18sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_horizontal_margin1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin30"
        android:layout_marginRight="@dimen/activity_horizontal_margin30"
        android:background="@color/road_line" />

    <yc.pointer.trip.view.ClearEditText
        android:id="@+id/loggin_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_horizontal_margin42"
        android:layout_marginLeft="@dimen/activity_horizontal_margin30"
        android:layout_marginRight="@dimen/activity_horizontal_margin30"
        android:layout_marginTop="@dimen/activity_horizontal_margin10"
        android:background="@null"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:drawableLeft="@mipmap/register_psw"
        android:drawablePadding="@dimen/activity_horizontal_margin8"
        android:drawableRight="@drawable/delete_selector"
        android:gravity="center_vertical"
        android:hint="@string/register_psw"
        android:inputType="textPassword"
        android:paddingRight="@dimen/activity_horizontal_margin10"
        android:textColor="@color/video_text"
        android:textColorHint="@color/video_text"
        android:textCursorDrawable="@drawable/edittext_cursor_drawable"
        android:textSize="@dimen/text_size_18sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_horizontal_margin1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin30"
        android:layout_marginRight="@dimen/activity_horizontal_margin30"
        android:background="@color/road_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin30"
        android:layout_marginRight="@dimen/activity_horizontal_margin30"
        android:layout_marginTop="@dimen/activity_horizontal_margin10">


        <TextView
            android:id="@+id/loginsetting_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_forget"
            android:textColor="@color/video_text"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/quick_loginsetting_enroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/login_register"
            android:textColor="@color/video_text"
            android:textSize="@dimen/text_size_14sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/login_commint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_horizontal_margin40"
        android:layout_marginLeft="@dimen/activity_horizontal_margin43"
        android:layout_marginRight="@dimen/activity_horizontal_margin43"
        android:layout_marginTop="@dimen/activity_horizontal_margin30"
        android:background="@drawable/adapter_order_txt"
        android:gravity="center"
        android:text="@string/loggin_title"
        android:textColor="@color/colorhint"
        android:textSize="@dimen/activity_text_size20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin70"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin35"
        android:paddingRight="@dimen/activity_horizontal_margin35">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_horizontal_margin1"
            android:layout_weight="1"
            android:background="@color/video_text" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/other_login"
            android:textColor="@color/video_text"
            android:textSize="@dimen/text_size_18sp"
            android:typeface="sans" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/activity_horizontal_margin1"
            android:layout_weight="1"
            android:background="@color/video_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin35"
        android:paddingRight="@dimen/activity_horizontal_margin35">

        <ImageView
            android:id="@+id/qq_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/qq_login" />

        <ImageView
            android:id="@+id/wx_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/wx_login" />

        <ImageView
            android:id="@+id/wb_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/micro_blog" />


    </LinearLayout>

</LinearLayout>
