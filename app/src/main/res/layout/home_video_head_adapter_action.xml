<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/activity_horizontal_margin8"
    android:orientation="vertical"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/action_pic"
        android:layout_width="@dimen/activity_horizontal_margin105"
        android:layout_height="@dimen/activity_horizontal_margin105"
        android:scaleType="fitXY"
         />

    <TextView
        android:id="@+id/action_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin10"
        android:layout_marginTop="@dimen/activity_horizontal_margin8"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:text="奇妙飞行"
        android:textColor="@color/foot_view_back"
        android:textSize="@dimen/text_size_18sp"
        android:typeface="sans"

        />
</LinearLayout>