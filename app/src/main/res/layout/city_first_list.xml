<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/locate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">


    <TextView
        android:id="@+id/locateHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dip"
        android:layout_marginTop="10dp"
        android:drawablePadding="11dp"
        android:drawableLeft="@mipmap/city_local_city"
        android:gravity="center_vertical"
        android:text="@string/city_location_city"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/locateHint_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/locateHint"
        android:layout_below="@id/locateHint"
        android:layout_marginTop="5dp"
        android:paddingLeft="26dp"
        android:text="@string/city_location_hint"
        android:textColor="@color/letter_location_city" />

    <!--  android:layout_alignParentEnd="true"-->
    <TextView
        android:id="@+id/lng_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locateHint_hint"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/activity_horizontal_margin20"
        android:layout_marginTop="@dimen/activity_horizontal_margin8"
        android:background="@mipmap/location_city"
        android:clickable="true"
        android:focusable="false"
        android:gravity="center"
        android:padding="5dp"
        android:text="武汉"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/pbLocate"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="64dip"
        android:layout_marginTop="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/lng_city"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#E2E2E2" />

</RelativeLayout>