<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        layout="@layout/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin60"
            android:background="@color/verify_button"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_horizontal_margin5">

            <TextView
                android:id="@+id/scenic_head_food"
                android:layout_width="0dp"
                android:layout_height="@dimen/activity_horizontal_margin50"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/activity_horizontal_margin20"
                android:text="@string/cate"
                android:textColor="@color/colorback"
                android:textSize="@dimen/activity_text_size16"/>

            <TextView
                android:id="@+id/scenic_head_humanity"
                android:layout_width="0dp"
                android:layout_height="@dimen/activity_horizontal_margin50"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/activity_horizontal_margin20"
                android:text="@string/human"
                android:textColor="@color/colorback"
                android:textSize="@dimen/activity_text_size16"

                />

            <TextView
                android:id="@+id/scenic_head_outdoors"
                android:layout_width="0dp"
                android:layout_height="@dimen/activity_horizontal_margin50"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/activity_horizontal_margin20"
                android:text="@string/outdoor"
                android:textColor="@color/colorback"
                android:textSize="@dimen/activity_text_size16"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/scenic_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/scenic_head_img_food"
                android:layout_width="0dp"
                android:layout_height="@dimen/activity_horizontal_margin75"
                android:layout_marginLeft="@dimen/activity_horizontal_margin8"
                android:layout_marginRight="@dimen/activity_horizontal_margin5"
                android:layout_weight="1"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/scenic_head_img_humanity"
                android:layout_width="0dp"
                android:layout_height="@dimen/activity_horizontal_margin75"
                android:layout_marginLeft="@dimen/activity_horizontal_margin8"
                android:layout_marginRight="@dimen/activity_horizontal_margin8"
                android:layout_weight="1"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/scenic_head_img_outdoors"
                android:layout_width="0dp"
                android:layout_height="@dimen/activity_horizontal_margin75"
                android:layout_marginLeft="@dimen/activity_horizontal_margin5"
                android:layout_marginRight="@dimen/activity_horizontal_margin8"
                android:layout_weight="1"
                android:scaleType="fitXY" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>