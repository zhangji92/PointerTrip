<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_marginTop="@dimen/activity_horizontal_margin10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_marginLeft="@dimen/activity_horizontal_margin18"
                android:layout_marginBottom="@dimen/activity_horizontal_margin26"
                android:layout_marginRight="@dimen/activity_horizontal_margin18"
                android:id="@+id/preview_img"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:src="@mipmap/order_previe"
                android:layout_height="wrap_content"/>
        <!--起始地-->
        <TextView
                android:layout_marginTop="@dimen/activity_horizontal_margin60"
                android:layout_marginLeft="@dimen/activity_horizontal_margin10"
                android:layout_alignLeft="@id/preview_img"
                android:id="@+id/preview_start_point"
                android:layout_width="wrap_content"
                android:text="天津"
                android:textSize="@dimen/activity_horizontal_margin30"
                android:textColor="@color/colorTitle"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/preview_plane"/>
        <!--目的地-->
        <TextView
                android:layout_marginTop="@dimen/activity_horizontal_margin60"
                android:id="@+id/preview_start_destination"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/preview_start_point"
                android:layout_width="wrap_content"
                android:text="上海"
                android:textSize="@dimen/activity_horizontal_margin30"
                android:textColor="@color/colorTitle"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/preview_order"
                android:layout_marginTop="@dimen/activity_horizontal_margin10"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/activity_text_size16"
                android:layout_alignLeft="@id/preview_img"
                android:layout_marginLeft="@dimen/activity_horizontal_margin10"
                android:layout_below="@id/preview_start_point"
                android:layout_width="wrap_content"
                android:text="发单时间:"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/preview_time"
                android:layout_toRightOf="@id/preview_order"
                android:layout_marginTop="@dimen/activity_horizontal_margin10"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/activity_text_size16"
                android:layout_marginLeft="@dimen/activity_horizontal_margin10"
                android:layout_below="@id/preview_start_point"
                android:layout_width="wrap_content"
                android:text="2017-04-05"
                android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>